# Check Operating System
case `uname -s` in
    Darwin)
        alias ls='ls -G'
        export GREP_OPTIONS='--color=auto'
        export GREP_COLOR='1;37;31'
        ;;
    *)
        alias ls='ls --color=auto'
        alias grep='grep -P --color=auto'
        ;;
esac

# This is a file of aliases
alias sudo='sudo -H'

# Aliases for ls
alias dir='ls'
alias vdir='ls -lb'

alias lsl='ls -l'
alias ll='ls -l'
alias lal='ls -Al'
alias la='ls -A'
alias l='ls -CF'

# Aliases for grep
alias fgrep='grep -F'
alias egrep='grep -E'

alias -g lg='| grep -P'

# Make cd a little easier
alias ..='cd ..'
