# Check Operating System
case `uname -s` in
    Darwin)
        alias ls='ls -G'
        export GREP_OPTIONS='--color=auto'
        export GREP_COLOR='1;37;31'
        ;;
    *)
        alias ls='ls --color=auto'
        alias grep='grep -P --color=auto'
        ;;
esac

# I hate the GUI emacs
alias emacs='emacs -nw'

# This is a file of aliases
alias sudo='sudo -H'

# Aliases for ls
alias dir='ls'
alias vdir='ls -lb'

alias lsl='ls -l'
alias ll='ls -l'
alias lal='ls -Al'
alias la='ls -A'
alias l='ls -CF'

# Aliases for grep
alias fgrep='grep -F'
alias egrep='grep -E'

# If shell is zsh
if [[ $SHELL =~ zsh ]]; then
    # Global alias
    alias -g lg='| grep -P'

    # Execute command for specific filetype
    alias -s java=vi
    alias -s c=vi
    alias -s h=vi
    alias -s cpp=vi
    #alias -s sh=vi
    #alias -s pl=vi
    #alias -s rb=vi
    #alias -s py=vi
fi

