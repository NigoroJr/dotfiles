URxvt.termName: rxvt-256color

URxvt.depth: 32
URxvt.foreground: snow
URxvt.background: black
! Blue
URxvt.color4: #5566FF
! Bright blue
URxvt.color12: #7799FF

URxvt.transparent: true
URxvt.shading: 15

! Disable scrollbar
URxvt.scrollBar: false

URxvt.saveLines: 5000
URxvt.pointerBlank: true
URxvt.urgentOnBell: true

URxvt.font: \
    xft:Ricty Discord:Regular:size=9, \
    xft:Symbola:Regular

! Use bold font for italics
URxvt.boldFont: \
    xft:Ricty Discord:Bold:size=9, \
    xft:Symbola:Bold

URxvt.italicFont: \
    xft:Ricty Discord:Bold:size=9, \
    xft:Symbola:Bold

URxvt.boldItalicFont: \
    xft:Ricty Discord:Bold:size=9, \
    xft:Symbola:Bold

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: full

! Left click to open URL
URxvt.perl-ext-common: url-select
URxvt.url-select.button: 1
! Underline URLs
URxvt.url-select.underline: true
URxvt.url-select.launcher: xdg-open
