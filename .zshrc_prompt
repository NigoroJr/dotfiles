# Using ESC as char code
# To enter ESC, use Ctrl-v Esc for Vim
# and Ctrl-q Esc for Emacs
local BLACK=$'%{[30m%}'
local RED=$'%{[31m%}'
local GREEN=$'%{[32m%}'
local YELLOW=$'%{[33m%}'
local BLUE=$'%{[34m%}'
local PURPLE=$'%{[35m%}'
local CYAN=$'%{[36m%}'
local WHITE=$'%{[37m%}'

case ${UID} in
    # When root
    0)
        PROMPT="%F$GREEN%n%f@%m:%d%F$CYAN#%f "
        [ -n "${REMOTEHOST}${SSH_CONNECTION}" ] &&
            PROMPT="%F$PURPLE${HOST%%.*}%f ${PROMPT}"

        # Add alias
        alias rm='rm -i'
        ;;
    *)
        PROMPT="%F$BLUE%n%f@%m:%~%F$RED$%f "
        # Add right prompt if not in Emacs?
        # if [ "$INSIDE_EMACS" = "" ]; then
            RPROMPT=" %* (%W)"
        # fi
#         PROMPT="%n@%m:%~$ "
        [ -n "${REMOTEHOST}${SSH_CONNECTION}" ] &&
            PROMPT="%F$PURPLE${HOST%%.*}%f ${PROMPT}"
        ;;
esac
