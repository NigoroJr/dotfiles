snippet		templ
abbr		Template for g++
options	 head
	CXX=${1:g++}
	CXXFLAGS=${2:-std=c++11 -Wall}
	PROG_NAME=${3}
	LIBS=${4}
	OBJS=${5}
	MAIN=${6}

	all: $(PROG_NAME)

	$(PROG_NAME): $(LIBS) $(OBJS) $(MAIN)
		$(CXX) $(CXXFLAGS) -o $@ $(OBJS) $(MAIN)

	%.o: %.cpp %.h
		$(CXX) $(CXXFLAGS) -c $<

	clean:
		rm -rf $(PROG_NAME) *.o
